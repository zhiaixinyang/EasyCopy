<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.mdove.easycopy.history.model.vm.HistoryResultOCRModelVM" />

        <variable
            name="handler"
            type="com.mdove.easycopy.history.model.handler.HistoryResultOCRHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_marginRight="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_copy"
                android:text="@{vm.mResultOCR}"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="14sp"
                tools:text="哈哈哈哈哈哈哈" />

            <ImageView
                android:id="@+id/btn_copy"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_alignParentRight="true"
                android:onClick="@{()->handler.onClickCopy(vm)}"
                android:tint="@color/black"
                android:src="@mipmap/ic_copy" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_below="@+id/tv_content"
                android:layout_marginTop="@dimen/_5dp"
                android:tint="@color/black"
                android:onClick="@{()->handler.onClickDelete(vm)}"
                android:src="@mipmap/ic_delete" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/btn_delete"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@{vm.mResultOCRTime}"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:text="哈哈哈哈哈哈哈" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>
